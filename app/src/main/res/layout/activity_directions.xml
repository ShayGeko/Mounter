<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:visibility="visible"
        tools:context=".directions.DirectionsActivity" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        map:cardBackgroundColor="#EAEDEF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-31dp"
                tools:layout_editor_absoluteY="-16dp">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="168dp"
                    android:layout_height="35dp"
                    android:text="My ride companion:"
                    android:textSize="16dp"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="1.0"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.074" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="228dp"
                    android:layout_height="34dp"
                    android:text="My scheduled ride:"
                    android:textSize="16dp"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.038"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.081" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="254dp"
                    android:layout_height="26dp"
                    android:text="Departing from: SFU Surrey"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.025"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.36" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="249dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="16dp"
                    android:text="Destination: SFU Burnaby"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.023"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.455" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="199dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="16dp"
                    android:text="Departure time: 10:30 am"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.019"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.623" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="94dp"
                    android:layout_height="21dp"
                    android:text="Is in good standing"
                    android:textSize="10dp"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.786"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.63" />

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="87dp"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="John Doe"
                    android:textSize="12dp"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.782"
                    map:layout_constraintStart_toStartOf="parent"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.391" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="59dp"
                    android:layout_height="71dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    map:layout_constraintBottom_toBottomOf="parent"
                    map:layout_constraintEnd_toEndOf="parent"
                    map:layout_constraintHorizontal_bias="0.1"
                    map:layout_constraintStart_toEndOf="@+id/editTextTextPersonName2"
                    map:layout_constraintTop_toTopOf="parent"
                    map:layout_constraintVertical_bias="0.4"
                    map:srcCompat="@drawable/person" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>