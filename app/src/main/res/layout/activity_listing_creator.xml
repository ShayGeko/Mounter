<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createListings.ListingCreator">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="311dp"
        android:layout_height="499dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fillTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fillFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="From" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fillHourOfDeparture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hour of Departure" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fillDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textAlignment="viewStart" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:tint="#3F96E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/checkmark_foreground"
        tools:srcCompat="@drawable/checkmark_foreground" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>